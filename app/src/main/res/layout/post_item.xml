<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="24dp"
            android:text="Post Title"/>

        <TextView
            android:id="@+id/tvMonthly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textSize="24dp"
            android:text="RM 200/Month"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:textAlignment="center"
            android:paddingBottom="10dp"
            android:text="Post Description"/>

        <TextView
            android:id="@+id/textDepo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:text="Deposit:"/>

        <TextView
            android:id="@+id/tvDeposit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:textAlignment="center"
            android:text="RM 800"/>

        <TextView
            android:id="@+id/textFurnished"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:text="Furnished Items:"/>

        <TextView
            android:id="@+id/tvFurnished"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:textAlignment="center"
            android:text="Furnished"/>

        <TextView
            android:id="@+id/textFaci"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:text="Facilities: "/>

        <TextView
            android:id="@+id/tvFacilities"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:textAlignment="center"
            android:text="Facitlies"/>

        <TextView
            android:id="@+id/textNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:text="Number of People:"/>

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text="Number of People"/>

        <TextView
            android:id="@+id/textGender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:text="Gender"/>

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:textAlignment="center"
            android:text="Gender"/>

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Username"
            android:textAlignment="viewEnd"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0112319238"
            android:textAlignment="viewEnd"
            android:textSize="15dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>